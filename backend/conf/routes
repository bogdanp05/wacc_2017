
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.TweetController.message

GET     /bogdan                     controllers.TweetController.bogdan

GET     /getTweets/:word            controllers.TweetController.getTweets(word: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET      /db/:id                    controllers.TweetController.list(id: String)
GET      /test/:id                  controllers.TweetController.write(id: String)
GET      /mongo/:word               controllers.TweetController.list_mongo(word: String)
GET      /test2/:word               controllers.TweetController.insert_mongo(word: String)

#testing purposes
GET     /bogdan2                     controllers.TweetController.bogdan2